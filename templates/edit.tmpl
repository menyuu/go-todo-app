{{ define "edit" }}
  <h1>ToDo編集</h1>
    {{ if .error }}
      <p style="color: red;">{{ .error }}</p>
    {{ end }}
  <form action="/update/{{ .todo.ID }}" method="POST">
    <input type="text" name="title" value="{{ .todo.Title }}">
    <input type="checkbox" name="done" {{ if .todo.Done }}checked{{ end }}>
    <button type="submit">変更</button>
  </form>
  <a href="/">戻る</a>
{{ end }}