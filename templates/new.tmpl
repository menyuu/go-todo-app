{{ define "new" }}
  <h1>新しいToDoを追加</h1>

  {{ if .error }}
    <p style="color: red;">{{ .error }}</p>
  {{ end }}
  <form action="/create" method="POST">
    <input type="text" name="title" placeholder="ToDoのタイトル" value="{{ .title }}">
    <button type="submit">追加</button>
  </form>
  <a href="/">戻る</a>
{{ end }}
